{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<h1>Home</h1>
	<img src="{{ asset('images/logo-google.png') }}" alt="Google Logo">
	<h2>The age is:
		{{ age }}
	</h2>
	{% if age >= 18 %}
		<h3>You are allowed</h3>
	{% else %}
		<h3>You are not allowed</h3>
	{% endif %}

	{% if countries %}
		<h2>Countries:</h2>
		<ul>
			{% for country in countries %}
				<li>{{ country }}</li>
			{% endfor %}
		</ul>
	{% endif %}

{% endblock %}
